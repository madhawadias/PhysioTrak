<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.physiotrak.ExercisePatient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/exerciseTwoBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/exerciseOneBut"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="43dp"
            android:layout_toEndOf="@+id/exerciseOneBut"
            android:layout_toRightOf="@+id/exerciseOneBut"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:onClick="exercise"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exerciseicon" />

        <ImageButton
            android:id="@+id/exerciseOneBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="43dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:onClick="exercise"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exerciseicon" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/exerciseThreeBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:onClick="exercise"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exerciseicon" />

        <ImageButton
            android:id="@+id/exerciseFourBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/exerciseTwoBut"
            android:layout_alignStart="@+id/exerciseTwoBut"
            android:layout_alignTop="@+id/exerciseThreeBut"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:layout_marginLeft="37dp"
            android:onClick="exercise"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exerciseicon" />

    </LinearLayout>
    </LinearLayout>




</RelativeLayout>
